<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jesong.webcall.card.mybatis.mapper.SaleTypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.jesong.webcall.card.domain.entity.SaleType">
        <id column="ID" property="id" />
        <result column="COMPANY_ID" property="companyId" />
        <result column="NAME" property="name" />
        <result column="WEIGHT" property="weight" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="selectData">
        select  ID, COMPANY_ID, NAME, WEIGHT from  JS_CUOUR_SALE_TYPE
    </sql>

    <select id="selectById" parameterType="Long" resultMap="BaseResultMap">
        <include refid="selectData"/>
        where ID = #{id}
    </select>



    <select id="queryListByMap" parameterType="map" resultMap="BaseResultMap">
        <include refid="selectData"/>
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="companyId != null"> and COMPANY_ID = #{companyId}</if>
            <if test="name != null"> and NAME = #{name}</if>
            <if test="weight != null "> and WEIGHT = #{weight}</if>
        </where>
    </select>


    <select id="queryList" parameterType="map" resultMap="BaseResultMap">
        <include refid="selectData"/>
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="companyId != null"> and COMPANY_ID = #{companyId}</if>
            <if test="name != null"> and NAME = #{name}</if>
            <if test="weight != null "> and WEIGHT = #{weight}</if>
        </where>
    </select>

    <insert id="insert" parameterType="SaleType" useGeneratedKeys="true" keyProperty="id">
        insert into JS_CUOUR_SALE_TYPE
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null"> id ,</if>
            <if test="companyId != null"> and COMPANY_ID ,</if>
            <if test="name != null"> NAME ,</if>
            <if test="weight != null "> WEIGHT,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null"> #{id},</if>
            <if test="companyId != null"> #{companyId},</if>
            <if test="name != null"> #{name},</if>
            <if test="weight != null "> #{weight},</if>
        </trim>
    </insert>

    <update id="update" parameterType="SaleType">
        update JS_CUOUR_SALE_TYPE
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null"> id = #{id},</if>
            <if test="companyId != null"> COMPANY_ID = #{companyId},</if>
            <if test="name != null"> NAME = #{name},</if>
            <if test="weight != null "> WEIGHT = #{weight},</if>
        </trim>
        where id= #{id}
    </update>

    <delete id="delete" parameterType="Long">
        delete from JS_CUOUR_SALE_TYPE where id = #{id}
    </delete>

</mapper>
